<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewArticulo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textViewNombreArticulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imageViewArticulo"
        app:layout_constraintTop_toTopOf="@id/imageViewArticulo"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/textViewNombreArticulo"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreArticulo"
        app:layout_constraintEnd_toEndOf="@id/textViewNombreArticulo"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
